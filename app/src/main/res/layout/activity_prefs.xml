<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alone"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mikeschen.www.fitnessapp.simpleActivities.PrefsActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top|center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:background="@color/colorWhite"
            android:id="@+id/homeEditText"
            android:hint="Enter Home Address"
            android:paddingLeft="@dimen/activity_medium_padding"
            android:layout_weight="0.8"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_weight="0.2"
            android:elevation="@dimen/activity_elevation"
            android:text="Set"
            android:padding="@dimen/activity_small_padding"
            android:textSize="@dimen/text_tiny"
            android:textColor="@color/colorWhite"
            android:id="@+id/homePrefsButton"
            android:drawableRight="@drawable/ic_home_white_24dp"
            android:background="@drawable/buttonred2"
            android:layout_below="@+id/workEditText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:background="@color/colorWhite"
            android:hint="Enter Work Address"
            android:id="@+id/workEditText"
            android:paddingLeft="@dimen/activity_medium_padding"
            android:layout_weight="0.8"
            android:layout_below="@+id/homeEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_weight="0.2"
            android:elevation="@dimen/activity_elevation"
            android:text="Set"
            android:drawableRight="@drawable/ic_work_white_24dp"
            android:padding="@dimen/activity_small_padding"
            android:textSize="@dimen/text_tiny"
            android:textColor="@color/colorWhite"
            android:id="@+id/workPrefsButton"
            android:background="@drawable/buttonred"
            android:layout_below="@+id/workEditText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@color/colorWhite"
            android:hint="Enter Feet"
            android:id="@+id/heightFeetEditText"
            android:paddingLeft="@dimen/activity_medium_padding"
            android:layout_weight="0.8"
            android:layout_below="@+id/workEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@color/colorWhite"
            android:hint="Enter Inches"
            android:id="@+id/heightInchesEditText"
            android:paddingLeft="@dimen/activity_medium_padding"
            android:layout_weight="0.8"
            android:layout_below="@+id/workEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_weight="0.2"
            android:elevation="@dimen/activity_elevation"
            android:text="Set"
            android:drawableRight="@drawable/ic_work_white_24dp"
            android:padding="@dimen/activity_small_padding"
            android:textSize="@dimen/text_tiny"
            android:textColor="@color/colorWhite"
            android:id="@+id/heightPrefsButton"
            android:background="@drawable/buttonred"
            android:layout_below="@+id/workPrefsButton" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@color/colorWhite"
            android:hint="Enter Weight"
            android:id="@+id/weightEditText"
            android:paddingLeft="@dimen/activity_medium_padding"
            android:layout_weight="0.8"
            android:layout_below="@+id/heightEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="5"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_weight="0.2"
            android:elevation="@dimen/activity_elevation"
            android:text="Set"
            android:drawableRight="@drawable/ic_work_white_24dp"
            android:padding="@dimen/activity_small_padding"
            android:textSize="@dimen/text_tiny"
            android:textColor="@color/colorWhite"
            android:id="@+id/weightPrefsButton"
            android:background="@drawable/buttonred"
            android:layout_below="@+id/heightPrefsButton" />

    </GridLayout>
</RelativeLayout>
