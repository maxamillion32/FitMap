<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".main.MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.mikeschen.www.fitnessapp.MenuFragment"
        android:id="@+id/fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout="@layout/fragment_menu" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainButton"
            android:layout_below="@+id/fragment"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_small"
            android:elevation="@dimen/activity_elevation"
            android:layout_marginTop="@dimen/activity_medium_padding"
            android:layout_marginRight="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tips/Suggestions"
            android:id="@+id/tipsTextView"
            android:textSize="@dimen/text_small"
            android:padding="@dimen/activity_medium_padding"
            android:layout_marginTop="@dimen/activity_medium_padding"
            android:layout_marginRight="@dimen/activity_wide_margin"
            android:layout_marginLeft="@dimen/activity_wide_margin"
            android:textColor="@color/colorAbout"
            android:textStyle="bold"
            android:background="@color/colorWhite"
            android:alpha="0.85"
            android:elevation="2dp"
            android:layout_below="@+id/mainButton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tipTextView"
            android:textColor="#292929"
            android:layout_below="@+id/tipsTextView"
            android:layout_marginLeft="@dimen/activity_wide_margin"
            android:layout_marginRight="@dimen/activity_wide_margin"
            android:padding="@dimen/activity_medium_padding"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/text_tiny"
            android:alpha="0.85"
            android:elevation="1dp"
            android:background="@color/colorWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/testText"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/calorieTestView"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        android:layout_above="@+id/testText"
        android:layout_alignRight="@+id/testText"
        android:layout_alignEnd="@+id/testText" />

</RelativeLayout>