<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".simpleActivities.AboutActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/walking_about"
        android:scaleType="centerCrop" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Benefits"
        android:id="@+id/benefitsTextView"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_wide_margin"
        android:layout_marginRight="@dimen/activity_wide_margin"
        android:layout_margin="@dimen/activity_wide_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Information"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="@dimen/activity_wide_margin"
        android:layout_marginRight="@dimen/activity_wide_margin"
        android:layout_marginTop="@dimen/activity_medium_padding"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appleIconImageView"
        android:src="@drawable/apple_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:elevation="1dp"
        android:scaleType="centerCrop"/>
</RelativeLayout>
